<%if user_signed_in? %>
 <% if Like.find_by(user_id: current_user.id, sentence_id: sentence.id) %>
  <div class="heart">
 <%=link_to sentence_like_path(sentence, sentence.likes), {method: "delete", remote: true, class: "likes-count"} do %>
<%= image_tag 'like.png', :size => '20' %>
 <% unless sentence.likes.count == 0 %>

 <%= sentence.likes.count %>

 </div>
 <% end %>
 <% end %>
 <% else %>
  <div class="heart">
 <%= link_to sentence_likes_path(sentence), {method: "post", remote: true, class: "likes-count"} do %>
<%= image_tag 'unlike.png', :size => '20' %>
<% end %>
 <% unless sentence.likes.count == 0 %>

 <%= sentence.likes.count %>

</div>

 <% end %>
<% end %>
 <% else %>
<%= sentence.likes.count %>
<% end %>