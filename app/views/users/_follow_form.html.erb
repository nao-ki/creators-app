<!-- フォローボタン(MYPAGEのユーザーがcurrent_userでなければ表示------------------------------------------------------>
<% if request.path.include?("followers") || request.path.include?("following") %>
  <% if user_signed_in? && @user == current_user %>
    <div id="follow_form">
      <% if current_user.following?(@user) %>
        <%= render "users/unfollow" %>
      <% else %>
        <%= render "users/follow" %>
      <% end %>
    </div>
  <% end %>
<% else  %>
  <% if user_signed_in? && @user != current_user %>
    <div id="follow_form">
      <% if current_user.following?(@user) %>
        <%= render "users/unfollow" %>
      <% else %>
        <%= render "users/follow" %>
      <% end %>
    </div>
  <% end %>
<% end %>
