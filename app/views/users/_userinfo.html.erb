 <div class="info-wrapper">
 <div class="post-followers-wrapper">

 <li>投稿数
 <% total = Image.includes([:user, :videos]).where(user_id: userid) %>
  <div class="num"><%= total.count %></div>
 </li>
 <li>フォロー

 <% @user = User.find(userid) %>
 <%= link_to following_user_path(@user.id) do %>
