<div class="userinfo-wrapper">
<div class="home-icon">
 <% if @icon %>
  <%= image_tag @icon.icon, :size => '30', class: 'usericon', id: 'userinfo' %>
 <% else %>
 <%= image_tag 'users.png', :size => '30', class: 'usericon', id: 'userinfo' %>
 <% end %>

 <div class="name-words">
  <div class="names">
    <%= link_to user_path(image.user.id) do %>
      <%= image.user.nickname %>
  </div>
  <div class="word">
    <%= image.user.word %>
  </div>
 </div>
  </div>
   <% end %>


