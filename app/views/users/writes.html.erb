  <div class="userWorks-content">
  <div class="worksGenre">
    <ul>
      <li>
      <%= link_to  user_path(current_user.id) do %>
      ホーム
      <% end %>
      </li>
        <li>
         <%= link_to  user_images_path(current_user.id) do %>
      画像
      <% end %>
      </li>
      <li>
     <%= link_to  user_sounds_path(current_user.id) do %>
     音楽
      <% end %>
      </li>
      <li>
     <%= link_to  user_videos_path(current_user.id) do %>
     動画
      <% end %>
      </li>
      <li>
     <%= link_to  user_writes_path(current_user.id) do %>
     文字
      <% end %>
      </li>
    </ul>
  </div>
  <div class="userWritesWrapper">
  <% if @writes.present?  %>
  <% @writes.each do |write| %>
   <div class="eachWritesBox">
    <%= render partial: 'users/writes_works', locals: { write: write} %>
  </div>
  <% end %>
  <% else  %>
    <div class="notPostyet" id="text">
  まだ文章に関する作品はありません。
  </div>
  <% end %>
  </div>


