  <!-- left end -->
  <div class="right">
    <div class="profile-info">
      <div class="profile-name"><%= @user.nickname %></div>
      <div class="profile-info-list">

      </div>
      <div class="profile-info-list">
        <%= @user.url_link %>
      </div>
      <div class="profile-info-list" id="introduction">
        <%= @user.introduction %>
      </div>
    </div>
    <% if current_user.id == @user.id %>
    <a href="/users/<%= @user.id %>/edit">
      <div class="edit-submit-post-profile">プロフィール編集</div>
    </a>
    <% end %>
  </div>
</div>
<h2 class="works-title">Works</h2>
  <div class="userWorks-content">
  <div class="worksGenre">
    <ul>
      <li>
      <%= link_to  user_path(current_user.id) do %>
      ホーム
      <% end %>
      </li>
        <li>
         <%= link_to  user_images_path(current_user.id) do %>
      画像
      <% end %>
      </li>
      <li>
     <%= link_to  user_sounds_path(current_user.id) do %>
     音楽
      <% end %>
      </li>
      <li>
     <%= link_to  user_videos_path(current_user.id) do %>
     動画
      <% end %>
      </li>
      <li>
     <%= link_to  user_sentences_path(current_user.id) do %>
     文字
      <% end %>
      </li>
    </ul>
  </div>

  <div class="soundWorksWrapper">
  <% if @sounds.present?  %>
   <% @sounds.each do |sound| %>
   <div class="sounds_contents">
 <%= link_to sound_path(sound.id) do %>
  <audio src="<%= rails_blob_path(sound.sound) %>" controlslist="nodownload type=" type="video/mp4" controls></audio>

  <div id="title-work">
    <%= sound.title %>
  </div>
  <% end %>
    <!--
      <%= render partial: 'users/sounds_works', locals: { sound: sound} %>
      -->
 </div>
  <% end %>
  <% else  %>
    <div class="notPostyet">
  まだ音/音楽に関する作品はありません。
  </div>
  <% end %>
