  <div class="tagedBox" id="video">

  <% videoworks = Video.where(id: video.video_id) %>
  <% videoworks.each do |video| %>
  <% user = User.find_by(id: video.user_id ) %>

<div class="taged-user-wrapper">
<div class="taged-usericon">
<% icon = Icon.find_by(user_id: video.user.id) %>
    <% if icon %>
    <%= image_tag icon.icon, :size => '30', class: 'usericon' %>
    <% else %>
    <%= image_tag 'users.png', :size => '30', class: 'usericon'  %>
    <% end %>
</div>
<div class="taged-user-box">
<div id="taged-name">
 <%= user.nickname %>
 </div>
 <div id="taged-word">
  <%= user.word %>
  </div>
</div>
</div>
<div class="works taged-video-wrapper">
   <% if video.video.attached? %>
 <video src="<%= rails_blob_path(video.video) %>" controlslist="nodownload type=" type="video/mp4" controls muted autoplay playinline loop></video>
  <% end %>
</div>
<div class="taged-works-intro">
 <div id="title">
  <%= video.title %>
 </div>
  <div id="content">
 <%= video.content %>
 </div>
</div>

  <% end %>

</div>